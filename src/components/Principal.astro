---
import { Image } from "astro:assets";

import Foto from "/public/images/avatar-jessica.jpeg";
---


	<div class="flex flex-col items-center p-4">
		<Image src={Foto} loading="eager" alt="Imagen Principal" class="rounded-full size-1/4 mx-auto my-3 hover:size-1/3" />
		<div class="w-11/12 flex flex-wrap flex-col justify-center">
			<h1 class="text-White text-center mb-1 text-2xl font-semibold hover:text-Green">Jessica Randall</h1>
			<h2 class="text-Green text-center text-sm mb-3 font-semibold hover:text-White">London, United Kingdom</h2>
			<span class="text-White text-center text-xs mb-4 font-light lg:text-sm"><q>Front-end developer and avid reader.</q>
			<span/>
		</div>
		<div class="flex flex-col flex-wrap w-11/12 text-White font-semibold">
			<button class=" rounded-md my-2 p-2 text-base bg-Grey active:bg-Green hover:text-OffBlack">GitHub</button>
			<button class=" rounded-md my-2 p-2 text-base bg-Grey active:bg-Green hover:text-OffBlack">Frontend Mentor</button>
			<button class=" rounded-md my-2 p-2 text-base bg-Grey active:bg-Green hover:text-OffBlack">LinkedIn</button>
			<button class=" rounded-md my-2 p-2 text-base bg-Grey active:bg-Green hover:text-OffBlack">Twitter</button>
			<button class=" rounded-md my-2 p-2 text-base bg-Grey active:bg-Green hover:text-OffBlack">Instagram</button>
		</div> 
	</div>


